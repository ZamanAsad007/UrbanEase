{
  "info": {
    "name": "UrbanEase Mini Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api/v1"
    },
    {
      "key": "authToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json.token) {",
              "  pm.collectionVariables.set('authToken', json.token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@urbanease.local\",\n  \"password\": \"admin123\"\n}"
        },
        "url": "{{baseUrl}}/auth/login"
      }
    },
    {
      "name": "Areas - List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/areas"
      }
    },
    {
      "name": "Areas - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{authToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Midtown\"\n}"
        },
        "url": "{{baseUrl}}/areas"
      }
    },
    {
      "name": "Areas - Assign Moderator",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{authToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"moderator_user_id\": 2\n}"
        },
        "url": "{{baseUrl}}/areas/1/assign-moderator"
      }
    },
    {
      "name": "Users - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New User\",\n  \"email\": \"new.user@urbanease.local\",\n  \"password\": \"user123\",\n  \"nid\": \"NID-USER-999\",\n  \"area_id\": 1\n}"
        },
        "url": "{{baseUrl}}/users/register"
      }
    },
    {
      "name": "Users - Pending",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{authToken}}" }],
        "url": "{{baseUrl}}/users/pending"
      }
    },
    {
      "name": "Users - Approve",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Authorization", "value": "Bearer {{authToken}}" }],
        "url": "{{baseUrl}}/users/4/approve"
      }
    },
    {
      "name": "Posts - List by Area",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/posts?area_id=1"
      }
    },
    {
      "name": "Posts - Create",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": 4,\n  \"area_id\": 1,\n  \"title\": \"Water leakage\",\n  \"description\": \"Water leakage near main road.\",\n  \"image_url_1\": null,\n  \"image_url_2\": null\n}"
        },
        "url": "{{baseUrl}}/posts"
      }
    },
    {
      "name": "Posts - Get",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/posts/1"
      }
    },
    {
      "name": "Posts - Update Status",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{authToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"resolved\"\n}"
        },
        "url": "{{baseUrl}}/posts/1/status"
      }
    },
    {
      "name": "Posts - Delete",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{authToken}}" }],
        "url": "{{baseUrl}}/posts/2"
      }
    },
    {
      "name": "Comments - List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/posts/1/comments"
      }
    },
    {
      "name": "Comments - Add",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": 4,\n  \"content\": \"Please fix soon.\"\n}"
        },
        "url": "{{baseUrl}}/posts/1/comments"
      }
    },
    {
      "name": "Comments - Delete",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{authToken}}" }],
        "url": "{{baseUrl}}/posts/1/comments/1"
      }
    }
  ]
}
